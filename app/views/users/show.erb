<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1><%=current_user.username%>'s Movie List:</h1>
      <ul>
        <% @movies.each do |movie| %>
          <li><a href="movies/<%=movie.id%>"><%=movie.name%></a></li>
        <% end %>
      </ul>
      <br><br>
    </div>
  </div>
</div>
<div class="container-fluid text-center">
  <div class="row">
    <div class="col-md-12">
      <form action="/movies/new" method="GET">
        <input id="hidden" type="hidden" name="_method" value="NEW">
        <input type="submit" value="Create a New Movie">
      </form>

      <form action="/logout" method="GET">
        <input id="hidden" type="hidden" name="_method" value="LOGOUT">
        <input type="submit" value="Logout">
      </form>

    </div>
  </div>
</div>
